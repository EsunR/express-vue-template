# Virtual Tour with Multi-Resolution Panos
# Skin with Scrolling-Thumbnails, Bingmaps, Gyroscope, VR-Support
# Documentation: https://krpano.com/docu/tools/config/
# krpano 1.21


# basic settings
include basicsettings.config
panotype=cylinder
hfov=360
makescenes=false


# output path
outputpath=%INPUTPATH%/assets


# convert spherical/cylindrical to cubical
converttocube=false
converttocubelimit=360x120
converttocubemaxwidth=60000


# multiresolution settings
multires=true
tilesize=auto


# output images path
tilepath=%OUTPUTPATH%/%BASENAME%/[c/]l%Al/%Av/l%Al[_c]_%Av_%Ah.jpg


# preview pano settings
preview=true
graypreview=false
previewsmooth=25
previewpath=%OUTPUTPATH%/%BASENAME%/preview.jpg


# generate thumbnails
makethumb=true
thumbsize=512
thumbpath=%OUTPUTPATH%/%BASENAME%/thumb.jpg


# xml output
xmltemplate=xml/vtour-simple.xml
xml=true
xmlpath=%OUTPUTPATH%/%BASENAME%/tour.xml


# html output/template
htmltemplate=html/embedpano.html
html=false
htmlpath=%OUTPUTPATH%/tour.html
